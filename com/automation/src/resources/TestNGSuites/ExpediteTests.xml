<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Expedite Testes" preserve-order="true">
    <listeners>
        <listener class-name="common.testHelper.FailureRetryListener"/>
        <listener class-name="common.testHelper.TestListener"/>
    </listeners>

    <test name="Login Test">
        <classes>
            <class name="tests.LoginTest">
                <methods>
                    <include name="logInWithoutRememberME"/>
                    <include name="loginEmptyFields"/>
                    <include name="logInIncorrectEmail"/>
                    <include name="logInIncorrectPassword"/>
                    <include name="logInViaRememberME"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Phonebook Test">
        <classes>
            <class name="tests.PhonebookTest">
                <methods>
                    <include name="createUserForPhonebook"/>
                    <include name="userListingFindUserByName"/>
                    <include name="userListingFindUserByMobile"/>
                    <include name="phonebookTabUserListingSortByMobile"/>
                    <include name="phonebookTabUserListingSortByDid"/>
                    <include name="phonebookTabUserListingSortByExtensions"/>

                    <!--TODO should be failed because of https://kerauno.atlassian.net/browse/KER-2061-->
                    <exclude name="phonebookTabUserListingSortByDepartments"/>
                    <!--TODO should be failed because of issue(extension button is not clickable)-->
                    <exclude name="phonebookTabUserListingViewUserInformation"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Dashboard Test">
        <classes>
            <class name="tests.DashboardTest">
                <methods>
                    <include name="releaseNoteInNewPage"/>
                    <include name="changePasswordLoginWithNewPassword"/>
                    <include name="myMobileWithIncorrectValues"/>
                    <include name="changePasswordNewPasswordWithoutLetters"/>
                    <include name="changePasswordNewPasswordWithoutNumbers"/>
                    <include name="changePasswordAreNotTheSame"/>
                    <include name="changePasswordWrongOldPassword"/>
                    <include name="changeVoicemailPin"/>
                    <include name="checkVoicemailPinInVoicemailPage"/>

                    <!-- TODO add method of the screenshoot comparator -->
                    <exclude name="changeProfilePictureWithoutUploadButton"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Calls Test">
        <classes>
            <class name="tests.CallsTest">
                <methods>
                    <include name="makeInternalCall"/>
                    <include name="makeCallToDestination"/>
                    <include name="callsTabUsersSearch"/>
                    <include name="callsTabDestination"/>
                    <include name="viewCallsWithIncomingType"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>
